<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <title>OurList Post || <%= posts.title %></title>


        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="/css/style.css" rel="stylesheet" type="text/css">
        <%- include ('../partials/head.ejs') %>

    </head>
    <body>

        <nav>
            <div class="nav-wrapper">
                <a href='/'>OURLIST</a>
              <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/">Go Back</a></li>
                <li><a href="/posts/new">Create a New Listing!</a></li>
                <li><a href="/posts">View all Post listings</a></li>
            </ul>
            </div>
          </nav>

    
		<main>

			<section class = 'showcard'>
                <h5>Details about: <%= posts.title %></h5>


                <div>
                <div class="row">
                    <div class="col s12 m7">
                      <div class="card">
                        <div class="card-image">
                        </div>
                        <div class="card-content">

				    <ul>
					<li>Title: <%= posts.title %></li>
                    <li>Price: $<%= posts.price %></li>
                    <li>Description: <%= posts.description %></li>

			    	</ul>

            </div>
            <div class="card-action">

                
                <a class = 'btn waves-effect waves-light' href="/posts/<%=posts._id %>/edit">Edit</a>

             

                <form class ='btn waves-effect waves-light' action="/posts/<%= posts._id %>?_method=DELETE" method="POST"> <input type="submit" value="Delete" />
                </form>


            </div>
          </div>
        </div>
      </div>
    </div>
    
        <div>
        </div>
        </div>

			</section>



<form class="comments" 
  action="/posts/<%= posts._id %>/comments" method="POST">
  <label>Comments</label><br>
  
  <textarea name="content" id ='commentbox' ></textarea>
  <br>
  <input type="submit" class='btn waves-effect waves-light' value="Add Comment">
</form>


<% if (posts.comments.length) { %>
  <table class ='reviews'>
    <thead>
      <tr>
        <th>Comments</th>

        
    </tr>
</thead>
<body>
    <div>
    <% posts.comments.forEach(function(r) { %>
        <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td> 
            <br>
            <td>
            <form action="/posts/<%= posts.comments._id %>?_method=DELETE" method="POST">
              <input type="submit" value="Delete" /></form>

             </td>
        </table>
    </tr>
    
    
    <% }); %>
</div>
</body>

<% } else { %>
    <h5>No Comments Yet</h5>
    <% } %>
    
    



    
		</main>
        <footer class="page-footer">
            <div class="container">
                  OurList by Jack & Nat
                  </div>
                </div>
              </footer>

        <script src="" async defer></script>
    </body>
</html>
